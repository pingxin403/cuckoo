#!/bin/bash

# Pre-commit hook to run linters and formatters
# This hook runs automatically before each commit

set -e

echo "Running pre-commit checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any checks failed
FAILED=0

# Function to check if files changed in a directory
files_changed_in() {
    local dir=$1
    git diff --cached --name-only | grep -q "^${dir}/"
}

# Check Protobuf files
if files_changed_in "api"; then
    echo -e "${YELLOW}Protobuf files changed, verifying generated code...${NC}"
    if make verify-proto; then
        echo -e "${GREEN}✓ Protobuf verification passed${NC}"
    else
        echo -e "${RED}✗ Protobuf verification failed${NC}"
        echo -e "${YELLOW}Run 'make gen-proto' to regenerate code${NC}"
        FAILED=1
    fi
fi

# Check Java files (Hello Service)
if files_changed_in "apps/hello-service/src"; then
    echo -e "${YELLOW}Java files changed, running linters...${NC}"
    if cd apps/hello-service && ./gradlew checkstyleMain checkstyleTest --quiet; then
        echo -e "${GREEN}✓ Java linting passed${NC}"
        cd ../..
    else
        echo -e "${RED}✗ Java linting failed${NC}"
        cd ../..
        FAILED=1
    fi
fi

# Check Go files (TODO Service)
if files_changed_in "apps/todo-service"; then
    echo -e "${YELLOW}Go files changed, running linters...${NC}"
    
    # Run gofmt check
    if cd apps/todo-service && [ -z "$(gofmt -l . | grep -v gen/)" ]; then
        echo -e "${GREEN}✓ Go formatting passed${NC}"
    else
        echo -e "${RED}✗ Go formatting failed${NC}"
        echo -e "${YELLOW}Run 'make format-todo' to fix formatting${NC}"
        FAILED=1
    fi
    
    # Run golangci-lint if available
    if command -v golangci-lint >/dev/null 2>&1; then
        if golangci-lint run --quiet ./...; then
            echo -e "${GREEN}✓ Go linting passed${NC}"
        else
            echo -e "${RED}✗ Go linting failed${NC}"
            FAILED=1
        fi
    else
        echo -e "${YELLOW}⚠ golangci-lint not found, skipping Go linting${NC}"
    fi
    
    cd ../..
fi

# Check TypeScript files (Web)
if files_changed_in "apps/web/src"; then
    echo -e "${YELLOW}TypeScript files changed, running linters...${NC}"
    
    # Run ESLint
    if cd apps/web && npm run lint --silent; then
        echo -e "${GREEN}✓ TypeScript linting passed${NC}"
    else
        echo -e "${RED}✗ TypeScript linting failed${NC}"
        echo -e "${YELLOW}Run 'npm run lint:fix' to fix issues${NC}"
        FAILED=1
    fi
    
    # Run Prettier check
    if npm run format:check --silent; then
        echo -e "${GREEN}✓ TypeScript formatting passed${NC}"
    else
        echo -e "${RED}✗ TypeScript formatting failed${NC}"
        echo -e "${YELLOW}Run 'npm run format' to fix formatting${NC}"
        FAILED=1
    fi
    
    cd ../..
fi

# Exit with error if any checks failed
if [ $FAILED -eq 1 ]; then
    echo -e "\n${RED}Pre-commit checks failed. Please fix the issues above.${NC}"
    exit 1
fi

echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
exit 0
